<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <TextView
        android:id="@+id/name_textView"
        android:layout_width="160dp"
        android:layout_height="44dp"
        android:layout_marginTop="70dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/name_title"
        app:layout_constraintTop_toBottomOf="@+id/profile_picture"/>

    <TextView
        android:id="@+id/contact_textView"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:layout_marginTop="70dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/contact_title"
        app:layout_constraintTop_toBottomOf="@+id/name_title" />

    <TextView
        android:id="@+id/homePage_textView"
        android:layout_width="170dp"
        android:layout_height="38dp"
        android:layout_marginTop="75dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/homePage_title"
        app:layout_constraintTop_toBottomOf="@+id/contact_title" />

    <TextView
        android:id="@+id/name_title"
        android:layout_width="93dp"
        android:layout_height="44dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="40dp"
        android:text="@string/attendee_name"
        android:textColor="@color/white"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@+id/contact_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_picture" />

    <TextView
        android:id="@+id/contact_title"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="45dp"
        android:text="@string/attendee_contact"
        android:textColor="@color/white"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@+id/homePage_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_title" />

    <TextView
        android:id="@+id/homePage_title"
        android:layout_width="150dp"
        android:layout_height="38dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="92dp"
        android:text="@string/attendee_home_page"
        android:textColor="@color/white"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@+id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_title" />

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="286dp"
        android:layout_height="203dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="63dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/default_avatar"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/black"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/back"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/white"
        app:strokeWidth="3dp" />



</androidx.constraintlayout.widget.ConstraintLayout>