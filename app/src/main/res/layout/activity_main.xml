<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/black">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="205dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="435dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/welcome_organizer"
        android:textAlignment="center"
        android:textColor="@color/gold"
        android:textSize="45dp" />

    <Button
        android:id="@+id/createEventButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="-380dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="@color/black"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/create_event"
        android:textColor="@color/white"
        android:textSize="28dp"
        app:strokeColor="@color/white"
        app:strokeWidth="3dp" />


    <Button
        android:id="@+id/guestListButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createEventButton"
        android:layout_alignStart="@+id/createEventButton"
        android:layout_alignEnd="@+id/createEventButton"
        android:layout_marginStart="4dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="-4dp"
        android:backgroundTint="@color/black"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/guest_list"
        android:textColor="@color/white"
        android:textSize="26dp"
        app:strokeColor="@color/white"
        app:strokeWidth="3dp" />


    <Button
        android:id="@+id/shareQRButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guestListButton"
        android:layout_alignStart="@+id/guestListButton"
        android:layout_alignEnd="@+id/guestListButton"
        android:layout_marginStart="5dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="-5dp"
        android:backgroundTint="@color/black"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/share_qr"
        android:textColor="@color/white"
        android:textSize="26dp"
        app:strokeColor="@color/white"
        app:strokeWidth="3dp" />



</RelativeLayout>